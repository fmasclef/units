{
  "name": "@fmasclef/units",
  "version": "1.0.0",
  "description": "Units converter",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "index.d.ts",
  "typesVersions": {
    ">=4.2": {
      "*": [
        "lib/types/*"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "types": "./lib/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/types/index.d.ts",
    "lib/esm/**/!(*.tsbuildinfo)",
    "lib/cjs/**/!(*.tsbuildinfo)",
    "lib/umd/**/!(*.tsbuildinfo)",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint ./ts --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "transpile": "tsc -p . && tsc -p ./tsconfig.cjs.json && tsc -p ./tsconfig.umd.json && tsc -p ./tsconfig.types.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:fmasclef/units.git"
  },
  "keywords": [
    "units",
    "metric",
    "imperial",
    "printing"
  ],
  "author": "FranÃ§ois Masclef",
  "license": "CC BY-SA 4.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
