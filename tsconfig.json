{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "declaration": false,
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "Node"
  },
  "include": ["./ts/**/*"],
  "exclude": ["node_modules", "lib", "ts/**/*.test.ts"]
}
